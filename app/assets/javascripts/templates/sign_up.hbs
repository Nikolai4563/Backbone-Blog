          <input type="email" class="form-control user_email" id="inputEmail1" name="email" >
        </div>
    </div>
    <div class="form-group">
        <label for="about" class="col-lg-4 control-label">About:</label>
        <div class="col-lg-6">
          <textarea rows="3" class="form-control user_about" cols="45" name="about"></textarea>
        </div>
