<div class="form-horizontal col-lg-10" role="form">
    <div class="form-group">
        <label for="name" class="col-lg-4 control-label">Your name:</label>
        <div class="col-lg-6">
          <input type="text" class="form-control user_name" id="inputEmail1" name="name">
        </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-lg-4 control-label">Email:</label>
